<h2>Login</h2>

<form action="/login" method="POST">

    <label> Email:
        <input type="email" name="email">
    </label>
    <label> Password:
        <input type="password" name="userPassword">
    </label>

    <button type="submit">Login</button>

    <br />
    {{#if errorMessage}}
        {{errorMessage}}
    {{/if}}

</form>