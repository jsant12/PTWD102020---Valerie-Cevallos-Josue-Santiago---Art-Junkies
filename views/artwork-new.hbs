{{#if userInSession}}
    <h3>Welcome, {{userInSession.fname}} </h3>

    <form action="/artwork-new" method="POST" enctype="multipart/form-data">
      <label>Title: <input type="text" name="title" value="" />
      </label>
        <br>
      <label>Medium: <input type="text" name="medium" value="" />
      </label>
        <br>
        <label>Description: <textarea name="description" cols="40" rows="5" maxlength="140"></textarea>
        </label>
        <br>
      <label>Image:<input type="file" name="imageToUpload" />
      </label>
        <br>
        <br>
        <br>
      <button type="submit">Create</button>      
      </form>

{{else}}
      <b>No user is logged in!<b>
{{/if}}